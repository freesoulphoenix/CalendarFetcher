<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0"
  ExtensionBundleId="com.calendar.fetcher"
  ExtensionBundleVersion="1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <ExtensionList>
    <Extension Id="com.calendar.fetcher.panel" Version="1.0.0"/>
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <Host Name="ILST" Version="[0.0,99.9]"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="11.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.calendar.fetcher.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./client/index.html</MainPath>
          <ScriptPath>./host/index.jsx</ScriptPath>

          <!-- Enable debugging (safe for dev; remove for final release if you want) -->
          <CEFCommandLine>
            <Parameter>--remote-debugging-port=9222</Parameter>
          </CEFCommandLine>

        </Resources>

        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>

        <UI>
          <Type>Panel</Type>
          <Menu>Calendar Fetcher</Menu>
          <Geometry>
            <Size>
              <Width>360</Width>
              <Height>520</Height>
            </Size>
          </Geometry>
        </UI>

      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
